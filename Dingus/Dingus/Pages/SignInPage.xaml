<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Dingus"
             x:Class="Dingus.Pages.SignInPage">
    <StackLayout Margin="10">
        <Label Text="Dingus" HorizontalTextAlignment="Center" FontSize="50" />
        <Entry Placeholder="Login" IsSpellCheckEnabled="False" />
        <Entry Placeholder="Password" IsPassword="True" />
        <Button Command="{Binding SignInCommand}" Text="Sign In" />
        <Button Command="{Binding SignUpCommand}" Text="Sign Up" />
    </StackLayout>
</ContentPage>
